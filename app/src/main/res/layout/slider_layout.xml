<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Image we will display is our slider view-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        android:layout_height="375dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/myimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name" />

        <VideoView
            android:id="@+id/myvideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name" />
</RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wtsapImg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_whastapp"></ImageView>

        <ImageView
            android:id="@+id/instaImg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:visibility="gone"

            android:src="@drawable/insta_logo"></ImageView>

        <ImageView
            android:id="@+id/webImg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:visibility="gone"

            android:src="@drawable/ic_web"></ImageView>

        <ImageView
            android:id="@+id/snapImg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:visibility="gone"

            android:src="@drawable/snapchat"></ImageView>
    </LinearLayout>
