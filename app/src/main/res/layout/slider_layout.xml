<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/sliderLayoutLl"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Image we will display is our slider view-->


        <RelativeLayout
            android:layout_width="match_parent"
             android:background="@drawable/rounded_rectangle_whitee"
             android:layout_height="375dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/myimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 app:riv_corner_radius="0dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name" />


            <VideoView
                android:id="@+id/myvideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_webview"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wtsapImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_whastapp"

            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/instaImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/insta_logo"

            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/webImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_web"

            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/snapImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/snapchat"

            android:visibility="gone"></ImageView>
    </LinearLayout>
