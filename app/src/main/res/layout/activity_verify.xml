<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/marginLeft"
    android:layout_marginRight="@dimen/marginRight"
    android:orientation="vertical"
    tools:context=".Activity.VerifyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"
        android:orientation="vertical">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/check_circle_regular"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/red_hat_isplay_bold"
            android:text="@string/verification"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_roman"
            android:gravity="center"

            android:text="@string/verification_pin">
        </TextView>





        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
             app:bar_height="40dp"
             app:otp_box_background="@drawable/otp_rounded_rectangle_whitee"
            app:height="60dp"
            app:box_margin="10dp"
            android:elevation="4dp"
             app:length="4"
            android:layout_marginBottom="20dp"
              app:otp_text_size="24dp"
            app:width="60dp" />
        <TextView
            android:id="@+id/resend_otpTxt"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/marginTop"
            android:gravity="center"
            android:text="@string/resend_otp_timer"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_title">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_otpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="15"
                android:background="@drawable/button_rounded_primary_color_selector"
                android:text="@string/submit"
                 android:textColor="@color/white"
                android:textSize="@dimen/text_size_title"></Button>


            <Button
                android:id="@+id/edit_numberBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="10"
                 android:background="@drawable/button_rounded_primary_color_selector"
                android:text="@string/edit_number"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title"></Button>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>