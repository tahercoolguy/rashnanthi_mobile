            <!--                    android:src="@drawable/small_unselect"-->
            <!--                    android:layout_height="wrap_content"-->

            <!--                    android:layout_margin="10dp"></ImageView>-->
            <!--            </LinearLayout>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wtsapImg"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_whastapp"></ImageView>

                <ImageView
                    android:id="@+id/instaImg"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_margin="10dp"

                    android:src="@drawable/insta_logo"></ImageView>

                <ImageView
                    android:id="@+id/webImg"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_margin="10dp"

                    android:src="@drawable/ic_web"></ImageView>

                <ImageView
                    android:id="@+id/snapImg"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_margin="10dp"

