<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/notificatiom_messege_RL"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_margin="@dimen/margin"

        android:background="@drawable/event_rounded_corner_white"
        android:elevation="@dimen/elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/title"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/notification_title_Txt"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_height="wrap_content">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/notification_time_Txt"
                 android:text="@string/today_6_pm"
                android:layout_height="wrap_content">


            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/notificatiom_messege_Txt"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:text="@string/noticication_messege"
            android:layout_height="wrap_content">


        </TextView>
    </RelativeLayout>

</LinearLayout>