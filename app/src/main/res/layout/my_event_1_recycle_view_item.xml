<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
      android:layout_height="wrap_content"
     android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginBottom="20dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_month_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:text="@string/march_3_2022"
                android:textColor="@color/black">

            </TextView>


            <ImageView
                android:id="@+id/edit_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:src="@drawable/ic_pen">

            </ImageView>

            <ImageView
                android:id="@+id/delete_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="200dp"
                    android:gravity="left"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="left"
                     android:layout_height="200dp">


                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/image"></ImageView>
                    <WebView
                        android:id="@+id/webview1"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                    </WebView>

                    <ImageView
                        android:id="@+id/delete_Img1"
                         android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/full_rounded_grad_with_transparent_background"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                     android:layout_height="200dp">


                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"

                         android:src="@drawable/image">

                    </ImageView>
                    <WebView
                        android:id="@+id/webview2"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                    </WebView>
                    <ImageView
                        android:id="@+id/delete_Img2"
                         android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/full_rounded_grad_with_transparent_background"                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete">

                    </ImageView>
                </RelativeLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="200dp"
                    android:gravity="left"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="left"
                    android:layout_height="200dp">


                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/image"></ImageView>
                    <WebView
                        android:id="@+id/webview3"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                    </WebView>

                    <ImageView
                        android:id="@+id/delete_Img3"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/full_rounded_grad_with_transparent_background"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="200dp">


                    <ImageView
                        android:id="@+id/img_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"

                        android:src="@drawable/image">

                    </ImageView>
                    <WebView
                        android:id="@+id/webview4"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:layout_height="match_parent">

                    </WebView>
                    <ImageView
                        android:id="@+id/delete_Img4"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/full_rounded_grad_with_transparent_background"                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete">

                    </ImageView>
                </RelativeLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>