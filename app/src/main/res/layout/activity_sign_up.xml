<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.master.design.rashnanthi.Activity.SignUpActivity">

    <include layout="@layout/register_page_bar_drawer" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="@string/register"

                android:textColor="@color/black"
                android:textSize="@dimen/login"
                android:textStyle="bold"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="3dp"
                android:text="@string/please_select_account_type_and_fill_data"
                android:textColor="@color/black"

                android:textSize="@dimen/text_size_title">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/profile_img">

                </ImageView>

                <ImageView
                    android:id="@+id/cameraImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/ic_camera_dp">

                </ImageView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                 android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"

                    android:gravity="center">


                    <TextView
                        android:id="@+id/eventTxt"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin"
                        android:layout_marginTop="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/rounded_corner_white"
                        android:elevation="@dimen/elevation"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/events_creater"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/coachTxt"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin"
                        android:layout_marginTop="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/rounded_corner_white"
                        android:elevation="@dimen/elevation"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/coach"
                        android:textColor="@color/black"
                        android:textSize="17dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/testing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="@string/country"
                        android:textSize="@dimen/text_size_title">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/marginLeft"
                        android:layout_marginTop="@dimen/marginTop"
                         android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/country_Img"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:elevation="@dimen/elevation"
                            android:src="@drawable/country_img1938">

                        </ImageView>

                        <EditText
                            android:id="@+id/country_codeET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="10"
                            android:background="@drawable/rounded_corner_white"
                            android:elevation="3dp"
                            android:hint="Kuwait"
                            android:padding="15dp"
                            android:textSize="15sp">

                        </EditText>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"

                    android:text="@string/name"
                    android:textSize="@dimen/text_size_title">

                </TextView>

                <EditText
                    android:id="@+id/nameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/marginRight"
                    android:background="@drawable/rounded_corner_white"
                    android:elevation="@dimen/elevation"
                    android:padding="10dp">

                </EditText>


                <TextView
                    android:id="@+id/emailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/email"
                    android:textSize="@dimen/text_size_title">

                </TextView>

                <EditText
                    android:id="@id/emailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/marginRight"
                    android:background="@drawable/rounded_corner_white"
                    android:elevation="@dimen/elevation"

                    android:padding="10dp">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"

                    android:text="@string/password"
                    android:textSize="@dimen/text_size_title">

                </TextView>

                <EditText
                    android:id="@+id/passwordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/marginRight"
                    android:background="@drawable/rounded_corner_white"
                    android:elevation="@dimen/elevation"
                    android:padding="10dp">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/confirm_password"
                    android:textSize="@dimen/text_size_title">

                </TextView>

                <EditText
                    android:id="@+id/confirm_passwordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/marginRight"
                    android:background="@drawable/rounded_corner_white"
                    android:elevation="@dimen/elevation"
                    android:padding="10dp"></EditText>

                <LinearLayout
                    android:id="@+id/testing1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/snapchat"
                        android:textSize="@dimen/text_size_title">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/snap__RL"
                        android:layout_width="385dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="38dp"
                        android:background="@drawable/rounded_corner_white"
                        android:elevation="@dimen/elevation">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/snapchat">

                        </ImageView>

                        <EditText
                            android:id="@+id/snap_id_ET"

                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/rounded_rectangle_whitee"
                            android:padding="10dp">

                        </EditText>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/instagram"
                        android:textSize="@dimen/text_size_title">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/insta_RL"
                        android:layout_width="385dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/rounded_corner_white"
                        android:elevation="@dimen/elevation">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_instaaaaaaaaaaaaaa">

                        </ImageView>

                        <EditText
                            android:id="@+id/insta_id_ET"

                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/rounded_rectangle_whitee"
                            android:padding="10dp">

                        </EditText>

                        <!--                    <EditText-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_marginLeft="70dp"-->
                        <!--                        android:layout_marginTop="15dp"-->
                        <!--                        android:gravity="center"-->
                        <!--                        android:text="@string/snapchat"-->
                        <!--                        android:textColor="@color/black"-->
                        <!--                        android:textSize="15sp"></EditText>-->

                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/whastapp"
                        android:textSize="@dimen/text_size_title">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/marginTop"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/country__Img"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:elevation="@dimen/elevation"
                            android:src="@drawable/ic_whastapp">

                        </ImageView>

                        <EditText
                            android:id="@+id/countrycode__ET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/rounded_corner_white"
                            android:elevation="3dp"
                            android:hint="+965"
                            android:inputType="number"
                            android:padding="15dp"
                            android:textSize="15sp">

                        </EditText>

                        <EditText
                            android:id="@+id/mobile__ET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/rounded_corner_white"
                            android:elevation="@dimen/elevation"
                            android:hint="66683688"
                            android:inputType="number"
                            android:padding="15dp"

                            android:textSize="15sp">

                        </EditText>


                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/mobile"
                    android:textSize="@dimen/text_size_title">

                </TextView>

                <LinearLayout
                    android:layout_width="420dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                      android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/countryImg"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:elevation="@dimen/elevation"
                        android:src="@drawable/country_img1938">

                    </ImageView>

                    <EditText
                        android:id="@+id/countrycodeET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/rounded_corner_white"
                        android:elevation="3dp"
                        android:hint="+965"
                        android:inputType="number"
                        android:padding="15dp"
                        android:textSize="15sp">

                    </EditText>

                    <EditText
                        android:id="@+id/mobileET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_corner_white"
                        android:elevation="@dimen/elevation"
                        android:hint="66683688"

                        android:inputType="number"
                        android:padding="15dp"
                        android:textSize="15sp">

                    </EditText>


                </LinearLayout>

                <Button
                    android:id="@+id/register_NowBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/button_rounded_primary_color_selector"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_title"></Button>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>


