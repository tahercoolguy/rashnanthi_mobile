    <ImageView
        android:id="@+id/coach_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_img_shape"
        android:src="@drawable/images"
        app:auto_cycle="true"
        app:corner_radius="30"
        app:delay="0"

        app:period="1000"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/colorPrimary"
        app:sliderIndicatorUnselectedColor="@color/grey">

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whatsapp_IMg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_whastapp"></ImageView>

        <ImageView
            android:id="@+id/insta_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"

            android:src="@drawable/ic_instaaaaaaaaaaaaaa"></ImageView>


        <ImageView
            android:id="@+id/snapchaht_Img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"

            android:src="@drawable/snapchat"></ImageView>
    </LinearLayout>


</LinearLayout>