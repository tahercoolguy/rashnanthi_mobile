<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/coach_img_CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/circle_white"
        android:elevation="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coach_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/images">

        </ImageView>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whatsapp_IMg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_whastapp"></ImageView>

        <ImageView
            android:id="@+id/insta_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"

            android:src="@drawable/insta_logo"></ImageView>


        <ImageView
            android:id="@+id/snapchaht_Img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"

            android:src="@drawable/snapchat"></ImageView>
    </LinearLayout>


</LinearLayout>